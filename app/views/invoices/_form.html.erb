<ol class="span-22">
  <li class="span-11">
    <%= f.label :code, t('activerecord.attributes.invoice.code'), :class=>'span-3' %>
    <%= f.text_field :code, :class=>'span-5'%>
  </li>
  <li class="span-11">
    <%= f.label :date, t('activerecord.attributes.invoice.date'), :class=>'span-3' %>
    <%= calendar_date_select :invoice, :date, :class=>'span-4'%>
  </li>
  <li class="span-11">
    <%= f.label :payment_method, t('activerecord.attributes.invoice.payment_method'), :class=>'span-3' %>
    <%= f.text_field :payment_method, :class=>'span-5'%>
  </li>
  <li class="span-11">
    <%= f.label :expiration_date, t('activerecord.attributes.invoice.expiration_date'), :class=>'span-3' %>
    <%= calendar_date_select :invoice, :expiration_date, :class=>'span-4'%>
  </li>
  <li class="span-11">
    <%= f.label :paid, t('activerecord.attributes.invoice.paid'), :class=>'span-3' %>
    <%= f.check_box :paid, :class=>'span-5'%>
  </li>
  <li class="span-11">
    <%= f.label :incidences, t('activerecord.attributes.invoice.incidences'), :class=>'span-3' %>
    <%= f.text_area :incidences, :class=>'span-5'%>
  </li>
  <li>
    <button type="submit" class="positive">
      <%= image_tag 'icons/tick.png', :alt => t('general.ok'), :title => t('general.ok') %><span><%= t'general.ok' %></span>
    </button>
    <%= link_to image_tag('icons/cross.png', :alt => t('general.cancel')) + (t'general.back'), orders_path, :class => 'button negative', :title => t('general.cancel') %>
    <%= link_to image_tag('print_32.png', :alt => t('general.print')) + (t'general.print'), print_url, :target => :blank, :class => 'button', :title => t('general.print') unless @invoice.new_record?%>
  </li>
</ol>
